---
import Section from "@/components/Section.astro";

import { education } from "@CV";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, area, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Presente";
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <div>
                <h3>{institution}</h3>
                <h4>{area}</h4>
              </div>
              <time>{years}</time>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
